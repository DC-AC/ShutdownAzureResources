{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "accountName": {
      "type": "string",
      "minLength": 6,
      "maxLength" :  50,
      "metadata": {
        "description": "The name of the Azure Automation account to deploy to."
      }
    },
    "PricingTier": {
      "type": "string",
      "allowedValues": [ "Free", "Basic" ],
      "defaultValue": "Free",
      "metadata": {
        "description": "Pricing tier for the automation account"
      }
    },
    "credentialName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "DefaultAzureCredential is the name of the Automation credential used in this runbook. This credential allows you to authenticate to Azure. "
      }
    },
    "userName": {
      "type": "string",
      "metadata": {
        "description": "The username for the Azure Automation credential."
      }
    },
    "password": {
      "type": "securestring",
      "metadata": {
        "description": "The password for the Azure Automation credential."
      }
    },
    "EmailName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "EmailCredential is the name of the Automation credential used in this runbook for sending email through SendGrid. This credential allows you to authenticate to SendGrid. "
      }
    },
    "EmailuserName": {
      "type": "string",
      "metadata": {
        "description": "The username for the SendGrid credential."
      }
    },
    "Emailpassword": {
      "type": "securestring",
      "metadata": {
        "description": "The password for the Email credential."
      }
    },
    "PowerShellModuleURI": {
      "type": "string",
      "defaultValue": "https://poshautomation.blob.core.windows.net/v150/",
      "metadata": {
        "description": "URI to get the updated PowerShell modules from.  URI must end with a slash (/)."
      }
    },

    "RunbookLocation": {
      "type": "string",
      "allowedValues": [ "eastus2", "japaneast", "southcentralus", "southeastasia", "westeurope", "australiasoutheast", "centralindia" ],
      "metadata": {
        "description": "Location which the Runbook should be created in.  This can be the same as the resource group location of different.  Run books can only be run in these locations."
      }
    }
  },
  "variables": {
    "runbookName": "ShutdownAzureResources",
    "scriptUri": "https://raw.githubusercontent.com/DC-AC/ShutdownAzureResources/master/Runbook.ps1",
    "runbookDescription": "Automatically shutdown (or scale down) Azure resources on a schedule every day.",
    "sku": "[parameters('PricingTier')]",
    "modules": {
      "AzureRm": {
        "profile": {
          "moduleName": "AzureRm.profile",
          "objectName": "[concat(parameters('accountName'), '/AzureRm.profile')]",
          "moduleURI": "[concat(parameters('PowerShellModuleURI'), '/AzureRm.profile.zip')]"
        }
      },
      "Azure": {
        "moduleName": "Azure",
        "objectName": "[concat(parameters('accountName'), '/Azure')]",
        "moduleURI": "[concat(parameters('PowerShellModuleURI'), '/Azure.zip')]"
      }

    }
  },
  "resources": [
    {
      "name": "[parameters('accountName')]",
      "type": "Microsoft.Automation/automationAccounts",
      "apiVersion": "2015-01-01-preview",
      "location": "[parameters('RunbookLocation')]",
      "dependsOn": [ ],
      "tags": { },
      "properties": {
        "sku": {
          "name": "[variables('sku')]"
        }
      },
      "resources": [
        {
          "name": "[variables('runbookName')]",
          "type": "runbooks",
          "apiVersion": "2015-01-01-preview",
          "location": "[parameters('RunbookLocation')]",
          "dependsOn": [
            "[concat('Microsoft.Automation/automationAccounts/', parameters('accountName'))]"
          ],
          "tags": { },
          "properties": {
            "runbookType": "Script",
            "logProgress": "false",
            "logVerbose": "false",
            "description": "[variables('runbookDescription')]",
            "publishContentLink": {
              "uri": "[variables('scriptUri')]",
              "version": "1.0.0.0"
            }
          }
        },
        {
          "name": "[parameters('EmailName')]",
          "type": "credentials",
          "apiVersion": "2015-01-01-preview",
          "location": "[parameters('RunbookLocation')]",
          "dependsOn": [
            "[concat('Microsoft.Automation/automationAccounts/', parameters('accountName'))]"
          ],
          "tags": { },
          "properties": {
            "userName": "[parameters('EmailuserName')]",
            "password": "[parameters('Emailpassword')]"
          }
        },
        {
          "name": "[parameters('credentialName')]",
          "type": "credentials",
          "apiVersion": "2015-01-01-preview",
          "location": "[parameters('RunbookLocation')]",
          "dependsOn": [
            "[concat('Microsoft.Automation/automationAccounts/', parameters('accountName'))]"
          ],
          "tags": { },
          "properties": {
            "userName": "[parameters('userName')]",
            "password": "[parameters('password')]"
          }
        },
        {
          "name": "[variables('modules').AzureRm.profile.objectName]",
          "type": "microsoft.automation/automationAccounts/Modules",
          "apiVersion": "2015-01-01-preview",
          "tags": { },
          "dependsOn": [
            "[concat('Microsoft.Automation/automationAccounts/', parameters('accountName'))]"
          ],
          "properties": {
            "contentLink": {
              "uri": "[variables('modules').AzureRm.profile.moduleURI]"
            }
          }
        },
        {
          "name": "[variables('modules').Azure.objectName]",
          "type": "microsoft.automation/automationAccounts/Modules",
          "apiVersion": "2015-01-01-preview",
          "tags": { },
          "dependsOn": [
            "[concat('Microsoft.Automation/automationAccounts/', parameters('accountName'))]",
            "[variables('modules').AzureRm.profile.moduleName]"
          ],
          "properties": {
            "contentLink": {
              "uri": "[variables('modules').Azure.moduleURI]"
            }
          }
        }

      ]
    }
  ],
  "outputs": { }
}
